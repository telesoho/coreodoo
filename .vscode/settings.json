{
  "MarkdownPaste.path": "${fileWorkspaceFolder}/doc/images",
  "MarkdownPaste.nameBase": "image",
  "MarkdownPaste.namePrefix": "${fileBasename}_",
  "MarkdownPaste.nameSuffix": "_${datetime}",
  "python.defaultInterpreterPath": "venv/bin/python",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
  },
  "python.linting.lintOnSave": true,
  "python.linting.flake8Args": [
    "--max-line-length",
    "188",
    "--ignore=E203,W503,W504",
    "--per-file-ignores=__init__.py:F401,E402"
  ],
  // "python.linting.pylintArgs": [
  //   "--init-hook='import odoo;odoo.addons.__path__.append(\"/sdl/addons/altruismo/addons\")'"
  // ],
  // "python.formatting.blackPath": "venv/bin/black",
  "python.formatting.provider": "black",
}
